<%- include ("./partials/header") %>
<div class="container login-singup-content">
	<h1 style="text-align:center">Sign Up Form</h1>
	<form action="/register" method="POST">
		<div class="form-group">
			<label for="text">Username</label>
			<input class="form-control" type="text" name="username" placeholder="username">
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input class="form-control" type="password" name="password" placeholder="password">
		</div>
		<div class="form-group">
			<label for="text">First Name</label>
			<input class="form-control" type="text" name="firstName" placeholder="first name">
		</div>
		<div class="form-group">
			<label for="text">Last Name</label>
			<input class="form-control" type="text" name="lastName" placeholder="last name">
		</div>
		<div class="form-group">
			<label for="email">Email</label>
			<input class="form-control" type="email" name="email" placeholder="abc123@def.com">
		</div>
		<div class="form-group">
			<label for="text">Avatar</label>
			<input class="form-control" type="text" name="avatar" placeholder="avatar url">
		</div>
		<div class="form-group">
			<label for="text">Admin Code</label>
			<input class="form-control" type="text" name="adminCode" placeholder="Admin Code">
		</div>
		<div class="form-group">
			<button class="form-control btn btn-primary btn-lg btn-block">Sign Up</button>
		</div>
	</form>
	<a href="/campgrounds" class="float-left">Go back</a>
</div>


<%- include ("./partials/footer") %>