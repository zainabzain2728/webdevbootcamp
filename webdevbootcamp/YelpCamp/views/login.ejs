<%- include ("./partials/header") %>
<div class="container login-singup-content">
		<h1 style="text-align:center">Login</h1>
			<form action="/login" method="POST">
				<div class="form-group">
				<label for="text">Username</label>
					<input class="form-control" type="text" name="username" placeholder="username">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input class="form-control" type="password" name="password" placeholder="password">
				</div>
				<div class="form-group">
					<input class="form-control btn btn-primary btn-lg btn-block" type="submit" value="Login">
				</div>
				<div class="form-group">
					<a class="form-control btn btn-warning btn-lg btn-block" href="/forgot">Forgot password?</a>
				</div>
			</form>
	<a href="/campgrounds" class="float-left">Back to the Campgrounds</a>
	
	<br>
	</div>


<%- include ("./partials/footer") %>