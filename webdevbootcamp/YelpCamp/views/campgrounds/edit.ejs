<%- include ("../partials/header") %>


 
      <h1 style="text-align:center">Edit <%= campground.name %></h1>
      <div class="container login-singup-content">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="form-group">
			  <label for="name">Name</label>
          <input class="form-control" type="text" name="name" value="<%= campground.name %>">
          </div>
	      <div class="form-group">
			  <label for="cost">Cost</label>
          <input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.01" step="0.01">
          </div>
          <div class="form-group">
			  <label for="image">Image Url</label><br>
           <input type="file" id="image" name="image" accept="image/*" value="<%= campground.image %>">
          </div>
			<div class="form-group">
				<label for="description">Description</label>
          <input class="form-control" type="text" name="description" value="<%= campground.description %>">
          </div>
		  <div class="form-group">
			<label for="location">Location</label>
			<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>" required>
		  </div>
          <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Update!</button>
          <div>
        </form>
      <a href="/campgrounds">Go back</a>
      </div>
      <%- include ("../partials/footer") %>

